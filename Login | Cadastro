<script type="text/javascript">
	function mostra(){
		var x = document.getElementById("formlogin");
		if (x.style.display === "none"){x.style.display = "inline-block"; }
		else {x.style.display = "none";}
	}
	function mostra1(){
		var x = document.getElementById("formcadas");
		if (x.style.display === "none"){x.style.display = "inline-block"; }
		else {x.style.display = "none";}
	}
	
</script>
