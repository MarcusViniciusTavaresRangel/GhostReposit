  let min = 1;
  let max = 101;
  document.getElementById("r100").innerHTML = 
var dcem = document.getElementById("r100").innerHTML = Math.floor(Math.random() *(max-min)+min); 

 if( dcem == 100 ){document.getElementById("r100").innerHTML = (); }

  

}

