<script>
function oi(event) { 

 var x = document.getElementById("demo").value; 

 
 if (event.keyCode==13 ){
	
	document.getElementById("demo").value = "" ; 	
 
	 if (event.keyCode==13 ){
	  
   		 if(x ==="/d6" )
  		  {
			let min =1; 
			let max = 6; 
			let roll = document.getElementById("demo1").innerHTML = Math.floor(Math.random() *(max-min +1)+min);
	 
			document.getElementById("demo1").innerHTML =roll;
			return;
		 }
	
		document.getElementById("demo1").innerHTML = x +"<br/>";
  	}
 	}
 }
 </script>
